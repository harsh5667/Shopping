@model Product

<div>
    <div class='row border rounded border-primary p-4'>
        <div class='col-md-5' style="display:flex;align-items:center;justify-content:center;">
            <img src="@Model.ImageUrl" class="card-img-top rounded" style="width:250px" />
        </div>
        <div class="col-md-1" style="border-left:dotted 1px black">
            
        </div>
        <div class='col-md-6'>
            <div class="">
                <div class=''>
                    <p style="font-weight:800;color:#EF6262">@Model.Title</p>
                    <p><span class='text-info' >Author : </span>@Model.Author</p>
                </div>
                <div class="">
                    <div><p class=""><span class="text-info" style="">Price :</span> <span class="text-decoration-line-through">@Model.ListPrice.ToString("c")</span></p></div>
                    <div><p class="text-dark"><span class="text-info">As low as : </span>@Model.Price100.ToString("c")</p></div>
                </div>
                <div class=''>
                    <p class="text-info">About This Book :</p>
                    <p class=''>
                       @Model.Description
                    </p>
                </div>

                <div class="row" >
                    <div class="col-3">
                        Wishlist
                        <span class="" style="color:#EF6262"><i class="bi bi-heart-fill"></i></span>
                    </div>
                    <div class="col-3">
                        Share
                        <span class="" style="color:#EF6262"><i class="bi bi-share-fill"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>